<UserControl x:Class="AirMonitor.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirMonitor.Views"
             mc:Ignorable="d" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:ctrl="clr-namespace:AirMonitor.Controls"
             xmlns:control="http://metro.mahapps.com/winfx/xaml/controls"
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel >
        <DockPanel.Resources>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="1"/>
            </Style>
        </DockPanel.Resources>
        <Border DockPanel.Dock="Top">
            <DockPanel>
                <Label DockPanel.Dock="Left" Style="{StaticResource Lbl_Title}" Content="{StaticResource T_Visualization}"></Label>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel.Resources>
                        <Style TargetType="Label" BasedOn="{StaticResource MetroLabel}">
                            <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                            <Setter Property="Margin" Value="0 0 5 0"/>
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MetroButton}">
                            <Setter Property="Height" Value="25"/>
                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                            <Setter Property="Margin" Value="2"/>
                        </Style>
                        <Style TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
                            <Setter Property="Height" Value="20"/>
                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                            <Setter Property="Margin" Value="2"/>
                        </Style>
                        <Style TargetType="Border">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="BorderBrush" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label Content="{StaticResource T_SamplingStatus}"></Label>
                    <Label Content="{Binding Sampling}"></Label>
                    <Label Content="{StaticResource T_ValidSamples}"></Label>
                    <Label Content="{Binding Samples.Count}"></Label>
                    <Label Content="{StaticResource T_InvalidSamples }"></Label>
                    <Label Content="{Binding InvalidSamples.Count}"></Label>
                    <Button Name="ClearSamples" Content="{StaticResource T_ClearMap}"></Button>
                    <!--<Button Name="SaveSamples" Content="{StaticResource T_SaveSamples}"></Button>
                    <Button Name="LoadSamples" Content="{StaticResource T_LoadSamples}"></Button>-->

                    <!--<Border>
                        <control:DropDownButton Margin="1" Height="18" FontWeight="Bold" Content="{StaticResource T_SaveSamples}" BorderThickness="0">
                            <control:DropDownButton.Items>
                                <ItemsControl cal:Message.Attach="[Event MouseDown]=[Action SaveSamplesToLocal()]">
                                    <TextBlock Text="{StaticResource T_LocalSamples}"></TextBlock>
                                </ItemsControl>
                                <ItemsControl cal:Message.Attach="[Event MouseDown]=[Action SaveSamplesToCloud()]">
                                    <TextBlock Text="{StaticResource T_RemotingSamples}"></TextBlock>
                                </ItemsControl>
                                <ItemsControl cal:Message.Attach="[Event MouseDown]=[Action SaveSamplesToShared()]">
                                    <TextBlock Text="{StaticResource T_SharedSamples}"></TextBlock>
                                </ItemsControl>
                            </control:DropDownButton.Items>
                        </control:DropDownButton>
                    </Border>
                    <Border>
                        <control:DropDownButton Margin="1" Height="18" FontWeight="Bold" Content="{StaticResource T_LoadSamples}" BorderThickness="0">
                            <control:DropDownButton.Items>
                                <ItemsControl cal:Message.Attach="[Event MouseDown]=[Action LoadSamplesFromLocal()]">
                                    <TextBlock Text="{StaticResource T_LocalSamples}"></TextBlock>
                                </ItemsControl>
                                <ItemsControl cal:Message.Attach="[Event MouseDown]=[Action LoadSamplesFromCloud()]">
                                    <TextBlock Text="{StaticResource T_RemotingSamples}"></TextBlock>
                                </ItemsControl>
                                <ItemsControl cal:Message.Attach="[Event MouseDown]=[Action LoadSamplesFromShared()]">
                                    <TextBlock Text="{StaticResource T_SharedSamples}"></TextBlock>
                                </ItemsControl>
                            </control:DropDownButton.Items>
                        </control:DropDownButton>
                    </Border>-->
                    <ToggleButton Visibility="Collapsed" Content="{StaticResource T_AnalysisSamples}" IsChecked="{Binding EnableAnalysis}"></ToggleButton>
                </StackPanel>
            </DockPanel>
        </Border>
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource MetroButton}">
                        <Setter Property="Margin" Value="2 0 0 0"/>
                    </Style>
                    <Style TargetType="ToggleButton" BasedOn="{StaticResource MetroToggleButton}">
                        <Setter Property="Margin" Value="2 0 0 0"/>
                    </Style>
                    <Style TargetType="Label" BasedOn="{StaticResource MetroLabel}">
                        <Setter Property="Margin" Value="2 0 0 0"/>
                    </Style>
                    <Style TargetType="ComboBox" BasedOn="{StaticResource MetroComboBox}">
                        <Setter Property="Margin" Value="2 0 0 0"/>
                        <Setter Property="Width" Value="80"/>
                    </Style>
                    <Style TargetType="control:NumericUpDown" >
                        <Setter Property="Margin" Value="2 0 0 0"/>
                        <Setter Property="Width" Value="80"/>
                    </Style>
                </StackPanel.Resources>
                <Label Content="{StaticResource T_MapDisplay}"></Label>
                <ComboBox ItemsSource="{Binding MapGridOptions.pollutants}" SelectedItem="{Binding MapGridOptions.pollutant}" DisplayMemberPath="DisplayName" SelectedValuePath="Name" />
                <!--<Label Content="{StaticResource T_MinValue}"></Label>
                <control:NumericUpDown Value="{Binding MapGridOptions.pollutant.MinValue}"/>
                <Label Content="{StaticResource T_MaxValue}"></Label>
                <control:NumericUpDown Value="{Binding MapGridOptions.pollutant.MaxValue}"/>-->
                <Label Content="{StaticResource T_SideLength}"></Label>
                <control:NumericUpDown Value="{Binding MapGridOptions.sideLength}" Minimum="5"/>
                <Label Content="透明度"></Label>
                <control:NumericUpDown Value="{Binding MapGridOptions.opacity}" Maximum="1" Minimum="0" Interval="0.1"/>
                <Button Name="RefreshBlock" Content="{StaticResource T_RefreshBlock}"></Button>
                <!--<ToggleButton IsChecked="{Binding IsUavFocus}" Content="{StaticResource T_UavFocus}"></ToggleButton>-->
                <!--<ToggleButton IsChecked="{Binding ShowUavPath}" Content="{StaticResource T_UavPath}"></ToggleButton>-->
                <!--<Button Name="UavLocation" Content="{StaticResource T_UavLocation}"></Button>-->
                <!--<Button Name="RefreshMap" Content="{StaticResource T_RefreshMap}"></Button>-->
                <!--<Button Name="Test" >测试</Button>
                <Button Name="OpenVideo" >打开视频</Button>-->
            </StackPanel>
        </Border>
        <Border DockPanel.Dock="Left">
            <Grid Margin="5">
                <!--<Grid.Resources>
                    <Style TargetType="Label" BasedOn="{StaticResource MetroLabel}">
                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="BorderBrush" Value="Gray"/>
                        <Setter Property="BorderThickness" Value="0 0 0 1"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>-->
                <!--<Rectangle Grid.Row="1" Grid.RowSpan="5" Opacity="{Binding MapGridOptions.opacity}" >
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" >
                            <GradientStop Color="{Binding MapGridOptions.colorEnd}" Offset="0"/>
                            <GradientStop Color="{Binding MapGridOptions.colorBegin}" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>-->
                <ListView Width="40" ItemsSource="{Binding MapGridOptions.pollutant.Levels}" >
                    <!--<ListView.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="{Binding MapGridOptions.opacity}">
                            <GradientStop Color="{Binding MapGridOptions.colorEnd}" Offset="0"/>
                            <GradientStop Color="{Binding MapGridOptions.colorBegin}" Offset="1"/>
                        </LinearGradientBrush>
                    </ListView.Background>-->
                    <!--<ListView.ItemTemplate>
                        <ItemContainerTemplate>
                            
                        </ItemContainerTemplate>
                    </ListView.ItemTemplate>-->
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="1"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border BorderBrush="LightGray" BorderThickness="0 0 0 1">
                                            <Border.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="{Binding MapGridOptions.opacity}">
                                                    <GradientStop Color="{Binding MinColor}" Offset="0"/>
                                                    <GradientStop Color="{Binding MaxColor}" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Grid>
                                                <Label Foreground="Black" VerticalAlignment="Top" Content="{Binding MinValue,Converter={StaticResource Round}}"/>
                                                <!--<Label Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Name}"/>-->
                                                <Label Foreground="White" VerticalAlignment="Bottom" Content="{Binding MaxValue,Converter={StaticResource Round}}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListView>
                <!--<Label Grid.ColumnSpan="2" Grid.Row="0" Content="{Binding MapGridOptions.ValueStep[5],Converter={StaticResource Round}}"/>
                <Label Grid.ColumnSpan="2" Grid.Row="1" Content="{Binding MapGridOptions.ValueStep[4],Converter={StaticResource Round}}"/>
                <Label Grid.ColumnSpan="2" Grid.Row="2" Content="{Binding MapGridOptions.ValueStep[3],Converter={StaticResource Round}}"/>
                <Label Grid.ColumnSpan="2" Grid.Row="3" Content="{Binding MapGridOptions.ValueStep[2],Converter={StaticResource Round}}"/>
                <Label Grid.ColumnSpan="2" Grid.Row="4" Content="{Binding MapGridOptions.ValueStep[1],Converter={StaticResource Round}}"/>
                <Label Grid.ColumnSpan="2" Grid.Row="5" Content="{Binding MapGridOptions.ValueStep[0],Converter={StaticResource Round}}"/>-->
            </Grid>
        </Border>
        <Border>
            <Grid>
                <WebBrowser Name="Map" Tag="{Binding MapContainer,Mode=OneWayToSource}"/>
                <Popup ctrl:PopupHelper.AttachWindow="{Binding RelativeSource={RelativeSource Mode=FindAncestor,  AncestorType={x:Type Window}}}" Placement="Top" Width="{Binding ElementName=Map,Path=ActualWidth}" Height="{Binding ElementName=Map,Path=ActualHeight}"  VerticalOffset="{Binding ElementName=Map,Path=ActualHeight}" IsOpen="True" AllowsTransparency="True" >
                    <Grid>
                        <Border  VerticalAlignment="Bottom"
                            Background="White"
                            Visibility="{Binding PropertyPanel,Converter={StaticResource AnyVisiable}}" >
                            <control:TransitioningContentControl  cal:View.Model="{Binding PropertyPanel}"/>
                        </Border>
                        <Border 
                            Background="White"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left">
                            <Grid>
                                <control:TransitioningContentControl  
                                    Visibility="{Binding Map3DPanel,Converter={StaticResource AnyVisiable}}" 
                                    Width="{Binding ElementName=Map,Path=ActualWidth,Converter={StaticResource Multiple}, ConverterParameter=0.4}" 
                                    Height="{Binding ElementName=Map,Path=ActualHeight,Converter={StaticResource Multiple}, ConverterParameter=0.4}"  
                                    cal:View.Model="{Binding Map3DPanel}"/>
                                <control:TransitioningContentControl  
                                    Width="{Binding ElementName=Map,Path=ActualWidth}" 
                                    Height="{Binding ElementName=Map,Path=ActualHeight}"  
                                    Visibility="{Binding Map3DFullPanel,Converter={StaticResource AnyVisiable}}" 
                                    cal:View.Model="{Binding Map3DFullPanel}"/>
                                <ToggleButton IsChecked="{Binding Show3DView}" Width="30" Height="30" 
                                              Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Left">3D</ToggleButton>
                                <ToggleButton IsChecked="{Binding Map3DFullScreen}" Width="30" Height="30" 
                                              Visibility="{Binding Show3DView,Converter={StaticResource IsVisible}}" 
                                              Style="{DynamicResource MetroCircleButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Right">〓</ToggleButton>
                            </Grid>
                        </Border>
                    </Grid>
                </Popup>
            </Grid>
        </Border>
    </DockPanel>

</UserControl>
