<UserControl x:Class="AirMonitor.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirMonitor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </UserControl.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top">
            <Label Style="{StaticResource Lbl_Title}" Content="{StaticResource T_Visualization}"></Label>
        </Border>
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal">
                <Label Content="{StaticResource T_MapDisplay}"></Label>
                <ComboBox ItemsSource="{Binding DataNameList}"  Margin="5 0" SelectedValue="{Binding DataName}" DisplayMemberPath="Item2" SelectedValuePath="Item1" SelectedIndex="0"/>
                <Button Name="RefreshMap" DockPanel.Dock="Right"  Content="{StaticResource T_RefreshMap}"></Button>
                <ToggleButton IsChecked="{Binding IsUavFocus}" Margin="5 0"  Content="{StaticResource T_UavFocus}"></ToggleButton>
                <Button Name="Test" DockPanel.Dock="Right"  Content="{StaticResource T_RefreshMap}"></Button>
                <Label Content="{Binding Sampling}"></Label>
                <Label Content="{Binding Samples.Count}"></Label>
            </StackPanel>
        </Border>
        <Border >
            <WebBrowser  Name="Map" Tag="{Binding MapContainer,Mode=OneWayToSource}"/>
        </Border>
    </DockPanel>
</UserControl>
